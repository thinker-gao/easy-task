page {
  color: #fff;
}
.container {
  position: relative;
  height: 100%;
  padding-bottom: 52px;
  box-sizing: border-box;
}
.bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.header {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  padding: 8px 14px 0;
}

.header .avatar .img {
  width: 23px;
  height: 23px;
  border: 2px solid #fff;
  border-radius: 50%;
}

.header .main {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding-top: 10px;
  text-align: center;
}

.header .main .date {
  margin-bottom: 10px;
}

.header .main .status {
  margin-bottom: 8px;
}
.header .main .name {
  height: 14px;
}
.header .right {
  width: 27px;
  background:none;
  overflow:visible;
  line-height:1;
  padding:0;
  border: none;
}
.header .right::after {
  display: none
}
.header .right .img {
  width: 18px;
  height: 18px;
  float: right
}
.content {
  text-align: center
}
.content .face {
  width: 634rpx;
  margin-top: 24px;
}
.content .line {
  position: absolute;
  left: 50%;
  margin-top: 5px;
  width: 1px;
  height: 25px;
  background-color: #fff;
}
.overview {
  display: flex;
  display: -webkit-flex;
  padding: 15px 0;
}
.overview .item {
  width: 50%;
  flex: 1;
  -webkit-flex: 1;
}
.overview .item .text {
  margin-top: 7px;
}
.overview .item .sub-text {
  margin-top: 5px;
}
.overview .item:first-child {
  border-right: 1px solid rgba(255, 255, 255, .8)
}
.overview image {
  width: 30px;
  height: 30px;
}
.use-btn-wrap {
  position: relative;
}
.use-btn-wrap image {
  width: 315rpx;
  height: 315rpx;
}
.use-btn-wrap .body {
  position: absolute;
  top: 74rpx;
  left: 50%;
  margin-left: -84rpx;
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
}
.use-btn-wrap .body.use {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
  flex-direction: column;
  -webkit-flex-direction: column;
  line-height: 1.4;
}
.use-btn-wrap .body .button {
  width: 56rpx;
  height: 60rpx;
  margin-top: 30rpx;
  margin-bottom: 12rpx;
}
.footer {
  display: flex;
  display: -webkit-flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  left: 0;
  border-top: 1px solid #fff;
  text-align: center
}
.footer .item {
  width: 25%;
  padding: 8px 0;
  font-size: 12px;
}
.footer .item .icon {
  width: 25px;
  margin-bottom: 7px;
}
.personal-sure {
  padding: 0 20px 10px;
}